<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/background_task"
    android:paddingStart="16dp">

    <ImageView
        android:id="@+id/item_iv_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shape_checkbox_default" />

    <TextView
        android:id="@+id/item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/primary_medium"
        android:paddingTop="26dp"
        android:paddingBottom="26dp"
        android:text="Enter Your Task Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_importanceView"
        app:layout_constraintStart_toEndOf="@+id/item_iv_check"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_importanceView"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_importance_high_rect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>